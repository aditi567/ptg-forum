<%- include('partials/header') %>
<div class="container">
  <h1 class="second-heading">Register</h1>
<br>
  <div class="row">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label class="text" for="email">Email</label>
              <input type="email" class="form-control text-center" name="username" placeholder="your email" required>
            </div>
            <div class="form-group">
              <label class="text" for="password">Password</label>
              <input type="password" class="form-control text-center" name="password" placeholder="your password" required>
            </div>
            <br>
            <button type="submit" class="btn btn-lg btn-block btn-dark">Register</button>
          </form>

        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-lg btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google fa-2x"></i>
            Sign Up with Google
          </a>
        </div>
    
      </div>
    </div>

  </div>
</div>

<%- include('partials/footer') %>
