<%- include('partials/header') %>

<div class="container">
  <h1 class="second-heading">Login</h1>
<br>
  <div class="row">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label class="text" for="email">Email</label>
              <input type="email" class="form-control text-center" name="username" placeholder="your email" required>
            </div>
            <div class="form-group">
              <label class="text" for="password">Password</label>
              <input type="password" class="form-control text-center" name="password" placeholder="your password" required>
            </div>
            <br>
            <button type="submit" class="btn-lg btn btn-dark btn-block">Login</button>
          </form>

        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card">
        <div class="card-body">
          <a class="btn-lg btn btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google fa-2x"></i> Sign In with Google
          </a>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/footer') %>
